<?xml version="1.0" encoding="utf-8"?>
<resources>
    <declare-styleable name="SwipeLayout">

        <attr name="leftItemColors" format="reference" />
        <attr name="leftItemIcons" format="reference" />
        <attr name="rightItemColors" format="reference" />
        <attr name="leftTextColors" format="reference" />
        <attr name="leftIconColors" format="reference" />
        <attr name="rightIconColors" format="reference" />
        <attr name="rightTextColors" format="reference" />
        <attr name="rightItemIcons" format="reference" />
        <attr name="swipeItemWidth" format="dimension" />
        <attr name="iconSize" format="dimension" />
        <attr name="foregroundLayout" format="reference" />
        <attr name="leftStrings" format="reference" />
        <attr name="rightStrings" format="reference" />
        <attr name="textSize" format="dimension" />
        <attr name="textTopMargin" format="dimension" />
        <attr name="customFont" format="string" />
        <attr name="canFullSwipeFromLeft" format="boolean" />
        <attr name="canFullSwipeFromRight" format="boolean" />
        <attr name="autoHideSwipe" format="boolean" />
        <attr name="onlyOneSwipe" format="boolean" />

    </declare-styleable>
    <declare-styleable name="SlidingLayout">
        <attr name="background_view" format="reference" />
        <attr name="sliding_mode" format="enum">
            <enum name="both" value="0" />
            <enum name="top" value="1" />
            <enum name="bottom" value="2" />
        </attr>
        <attr name="sliding_pointer_mode" format="enum">
            <enum name="one" value="0" />
            <enum name="more" value="1" />
        </attr>
        <attr name="top_max" format="dimension" />
    </declare-styleable>


    <declare-styleable name="drawableText">
        <attr name="leftDrawable" format="reference|integer" />
        <attr name="rightDrawable" format="reference|integer" />
        <attr name="topDrawable" format="reference|integer" />
        <attr name="bottomDrawable" format="reference|integer" />
        <attr name="drawableWidth" format="dimension" />
        <attr name="drawableHeight" format="dimension" />
    </declare-styleable>

    <declare-styleable name="JPTabBar">
        <attr name="TabNormalColor" format="reference|color"/>
        <attr name="TabSelectColor" format="reference|color"/>
        <attr name="TabSelectBg" format="reference|color"/>
        <attr name="TabTextSize" format="dimension|reference"/>
        <attr name="TabTypeface" format="string"/>
        <attr name="TabIconSize" format="dimension|reference"/>
        <attr name="TabIconFilter" format="boolean"/>
        <attr name="TabMargin" format="dimension|reference"/>
        <attr name="TabAnimate" format="enum">
            <enum name="Flip" value="0"/>
            <enum name="Rotate" value="1"/>
            <enum name="Scale" value="2"/>
            <enum name="Jump" value="3"/>
            <enum name="Scale2" value="4"/>
            <enum name="None" value="5"/>
        </attr>
        <attr name="TabPressAnimateEnable" format="boolean"/>
        <attr name="TabPageAnimateEnable" format="boolean"/>
        <attr name="TabGradientEnable" format="boolean"/>
        <attr name="TabMiddleBottomDis" format="dimension|reference"/>
        <attr name="TabMiddleView" format="reference"/>
        <attr name="TabMiddleHMargin" format="dimension|reference"/>
        <attr name="BadgeColor" format="reference|color"/>
        <attr name="BadgePadding" format="dimension|reference"/>
        <attr name="BadgeTextSize" format="reference|dimension"/>
        <attr name="BadgeVerticalMargin" format="reference|dimension"/>
        <attr name="BadgeHorizonalMargin" format="reference|dimension"/>
    </declare-styleable>


</resources>